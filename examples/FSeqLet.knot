namespace TmVar, x, y, z : Tm
namespace TyVar, X, Y, Z : Ty

sort Ty, S, T, U :=
  + TVar X
  | TArr T1 T2
  | TAll X [X]T

sort Tm, s, t, u :=
  + Var x
  | Abs x T [x]t
  | App t1 t2
  | TAbs X [X]t
  | TApp t T
  | Let d [bind d]t

sort Decls, d :=
  | DNil
  | DCons x t [x]d

fun bind : Decls -> [TmVar]
  | DNil        -> {}
  | DCons x t d -> x, bind d

env Ctx, G, D :=
  + empty
  | evar : x -> T
  | etvar : X ->
