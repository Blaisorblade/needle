namespace TmVar, x, y, z : Tm
  - shift: "shift" - subst: "subst"
namespace TyVar, X, Y, Z : Ty
  - shift: "tshift" - subst: "tsubst"

sort Ty, S, T, U :=
  + tvar X
  | top
  | tarrow T1 T2
  | tall X T1 [X]T2

sort Tm, s, t, u :=
  + var x
  | abs x T [x]t
  | app t1 t2
  | tabs X T [X]t
  | tapp t T

env Env, G, D :=
  + empty
  | evar   : x -> T
  | ebound : X -> T
