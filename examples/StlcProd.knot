namespace TmVar, x, y, z : Tm

sort Ty, S, T, U :=
  | TArr T1 T2
  | TUnit
  | TProd T1 T2

sort Tm, s, t, u :=
  + Var x
  | Abs x T [x]t
  | App t1 t2
  | Unit
  | Prod t1 t2
  | Case t1 p [bind p]t2

sort Pat, p :=
  | PVar x
  | PProd p1 p2

fun bind : Pat -> [TmVar]
  | PVar x      -> x
  | PProd p1 p2 -> bind p1 , bind p2

env Ctx, G, D :=
  + empty
  | evar : x -> T
